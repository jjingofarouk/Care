model UserRegistration {
  id           String   @id @default(uuid())
  email        String   @unique
  firstName    String
  lastName     String
  role         UserRole @default(PATIENT)
  passwordHash String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

enum UserRole {
  PATIENT
  DOCTOR
  NURSE
  LAB_TECHNICIAN
  PHARMACIST
  RECEPTIONIST
  RADIOLOGIST
  SURGEON
  ADMIN
  STAFF
  ACCOUNTANT
  BILLING_OFFICER
  HOSPITAL_MANAGER
  IT_SUPPORT
  CLEANING_STAFF
  SECURITY
}