// utilities.prisma
enum UtilityType {
  ELECTRICITY
  WATER
  GAS
  INTERNET
  WASTE_DISPOSAL
  HVAC_MAINTENANCE
  MEDICAL_GAS
}

enum UtilityStatus {
  ACTIVE
  INACTIVE
  MAINTENANCE
  DISRUPTED
}

enum BillingCycle {
  DAILY
  WEEKLY
  MONTHLY
  QUARTERLY
  ANNUAL
